{
  "kind": "collectionType",
  "collectionName": "topics",
  "info": {
    "singularName": "topic",
    "pluralName": "topics",
    "displayName": "Topic",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true,
      "unique": true
    },
    "order": {
      "type": "integer",
      "required": true,
      "default": 0
    },
    "page": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::page.page",
      "inversedBy": "topics",
      "required": true
    },
    "subtopics": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::subtopic.subtopic",
      "mappedBy": "topic"
    }
  }
}
